
{% for table in tables %}
    <h2>{{table['name']}}</h2>

    <div class="table-responsive">
        <table class="table">
       <thead class="thead-dark">
            <tr>
            {% for head in table['columns'] %}
                <th>{{ head }}</th>
            {% endfor %}
            </tr>
        </thead>
        {% if table.complex == true %}
            {% for row in table['rows'] %}
                <tr>
                    {% for r in row %}
                    <td>
                        {{r}}
                    </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        {% else %}
            {% for row in table['rows'] %}
                <tr>
                    {% for r in row['rrow'] %}
                    <td>
                        {% if loop.first %}
                            <a href="/public/Datamanager?command=read&tblid={{table['name']}}&id={{row['pk']}}">{{r}}</a> <a href="/public/Datamanager?command=update&tblid={{table['name']}}&id={{row['pk']}}">Edit</a>|<a href="/public/Datamanager?command=delete&tblid={{table['name']}}&id={{row['pk']}}">Delete</a>
                        {% else %}
                            {{r}}
                        {% endif %}
                    </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        {% endif %}
        </table>
    </div>
    <hr>
{% endfor %}

